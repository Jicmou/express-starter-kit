{
  "name": "extreme-quotation",
  "version": "0.1.0",
  "description": "Little app to animate an extreme quotation workshop with a remote team",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "launch": "node dist/index.js --config environment-template.json",
    "lint": "tslint --config ./tslint.json --project ./tsconfig.json && tsc",
    "nyc": "nyc npm run tape",
    "ok": "echo All good !",
    "prestart": "npm run clean",
    "pretest": "npm run clean",
    "start": "npm run lint && npm run launch",
    "start:watch": "chokidar src/**/*.ts --initial -c 'npm run start'",
    "tape": "tape ./dist/**/*.spec.js | tap-spec",
    "test": "npm run lint && npm run nyc && npm run ok",
    "tdd": "chokidar src/**/*.ts --initial -c 'npm run test'"
  },
  "keywords": [
    "scrum",
    "extreme-quotation"
  ],
  "author": "Jicmou",
  "license": "ISC",
  "dependencies": {
    "bluebird": "3.5.2",
    "express": "4.16.3",
    "mz": "2.7.0",
    "socket.io": "2.1.1"
  },
  "devDependencies": {
    "@types/bluebird": "3.5.24",
    "@types/express": "4.16.0",
    "@types/mz": "0.0.32",
    "@types/socket.io": "1.4.38",
    "@types/tape": "4.2.32",
    "chokidar-cli": "1.2.1",
    "nyc": "13.0.1",
    "tap-spec": "5.0.0",
    "tape": "4.9.1",
    "tslint": "5.11.0",
    "typescript": "3.1.1"
  }
}
